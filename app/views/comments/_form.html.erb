<div class= 'text-center tracking-tight'>
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <div class="w-1/2 bg-white p-2 pt-4 rounded">
      <div class = "border-solid border-4 border-light-blue-500 ...">
        <div class="flex ml-3">
          <div class="mr-3">
            <img src="http://picsum.photos/50" alt="" class="rounded-full">
          </div>
          <div>
            <h1 class="font-semibold"> <%= current_user.username %> </h1>
            <p class="font-xs text-gray-500"> <%= DateTime.now.strftime('%m/%d/%Y') %> </p>
          </div>
        </div> 
        <div class="mt-3 p-3 w-full">
          <textarea rows="3" class="border p-2 rounded w-full" placeholder="Write something..."></textarea>
        </div>
        <div class="flex justify-between mx-3">
          <div>
            <button class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Submit</button>
          </div>
        </div>
      </div>
    </div>

    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body , class: "border p-2 rounded w-full" %>
    </p>
    <div class="flex items-baseline justify-between">
      <p>
        <%= form.label :status %><br>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
      </p>
    </div>
  <% end %>
</div>
