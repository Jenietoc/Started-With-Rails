<div class= 'text-center tracking-tight'>
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <div class="bg-white p-2 pt-4 rounded">
        <div class="flex ml-3">
          <div class="mr-3">
            <img src="http://picsum.photos/50" alt="" class="rounded-full">
          </div>
          <div>
            <a> <%= link_to current_user.username, user_path(current_user.id), class:'mx-2 text-gray-700 font-semibold hover:underline' %> </a>
          </div>
        </div> 
        <div class="mt-3 w-full">
          <%= form.text_area :body , class: "border p-5 rounded w-full", placeholder:"Write something..." %>
        </div>
        <div class="mt-2 text-right">
          <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
          <button class="px-5 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Submit</button> 
        </div>
    </div>
  <% end %>
</div>
