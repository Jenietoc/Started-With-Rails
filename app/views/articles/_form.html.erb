<%= form_with model: locals[:article] do |form| %>
  <div class="flex items-center justify-center min-h-screen bg-gray-300">
    <div class="card bg-white max-w-md p-10 md:rounded-lg my-1 mx-auto">
      <h1 class='text-center font-bold mb-2'> <%= locals[:title] %> </h1>
      <div class="form mt-4">
        <div class="flex flex-col text-sm">
          <label for="title" class="font-bold mb-2">Title</label>
          <%= form.text_field :title, class:" appearance-none border border-gray-200 p-2 focus:outline-none focus:border-gray-500",
          type:"text" ,placeholder:"Enter a title" %>
          <% locals[:article].errors.full_messages_for(:title).each do |message| %>
            <div> <%= message %> </div>
          <% end %>
        </div>
        <div class="text-sm flex flex-col">
          <label for="description" class="font-bold mt-4 mb-2">Description</label>
          <%= form.text_area :body, class:"appearance-none w-full border border-gray-200 p-2 h-60 focus:outline-none focus:border-gray-500",
          placeholder:"Enter your description" %><br>
          <% locals[:article].errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      </div>
      <div class="options md:flex md:space-x-6 text-sm items-center text-gray-700 mt-4">
        <p class="w-1/2 mb-2 md:mb-0"> Status </p>
        <div>
          <%= form.select :status, ['public', 'private', 'archived'], selected: 'public', class:"w-full border bg-white rounded px-3 py-2 outline-none" %>
        </div>
      </div>   
      <div class="flex items-baseline justify-between">
        <button class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900"> <%= locals[:title_button] %> </button>
        <% if user_signed_in? %>
          <%= current_user.username %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
