<% locals[:articles].each do |article| %>
  <% if locals[:archived] %>
    <% unless article.archived? %>
      <div class="max-w-3xl mx-auto bg-white overflow-hidden shadow-md rounded-lg mb-12">
        <img src="https://images.pexels.com/photos/160107/pexels-photo-160107.jpeg" alt="" class="w-full h-64 object-cover">
        <div class="p-6">
          <div>
            <a> <%= link_to article.title, article, class:"block text-gray-800 font-semibold text-2xl mt-2 hover:text-gray-600 hover:underline" %> </a>
            <p class="text-sm text-gray-600 mt-2"> <%= article.body[0..220] %> ...</p>
          </div>
          <div class="mt-4">
            <div class="flex items-center">
              <div class="flex items-center">
                <img src="http://picsum.photos/50" class="h-10 object-cover rounded-full" alt="">
                <a> <%= link_to article.user.username, user_path(article.user.id), class:'mx-2 text-gray-700 font-semibold hover:underline' %> </a>
                <span class="mx-1 text-gray-600 text-xs"> <%= article.created_at.strftime('%m/%d/%Y') %> </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="max-w-3xl mx-auto bg-white overflow-hidden shadow-md rounded-lg mb-12">
      <img src="https://images.pexels.com/photos/160107/pexels-photo-160107.jpeg" alt="" class="w-full h-64 object-cover">
      <div class="p-6">
        <div>
          <span class="text-blue-600 text-xs font-medium uppercase"><%= article.status %></span>
          <a> <%= link_to article.title, article, class:"block text-gray-800 font-semibold text-2xl mt-2 hover:text-gray-600 hover:underline" %> </a>
          <p class="text-sm text-gray-600 mt-2"> <%= article.body[0..220] %> ...</p>
        </div>
        <div class="mt-4">
          <div class="flex items-center">
            <div class="flex items-center">
              <span class="mx-1 text-gray-600 text-xs"> <%= article.created_at.strftime('%m/%d/%Y') %> </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
          