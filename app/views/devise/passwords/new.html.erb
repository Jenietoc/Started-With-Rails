<%= render "devise/shared/error_messages", resource: resource %>
<div class="flex items-center justify-center min-h-screen bg-gray-300">
  <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
    <h3 class="text-2xl font-bold text-center">Forgot your password?</h3>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="mt-4">
        <div class="field">
          <label class="block" for="email">Email<label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email",
          class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
        </div>
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class:"flex items-baseline justify-between text-sm text-blue-600 hover:underline mt-4" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
