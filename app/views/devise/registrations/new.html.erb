<%= render "devise/shared/error_messages", resource: resource %>
<div class="flex items-center justify-center min-h-screen bg-gray-300">
  <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
    <h3 class="text-2xl font-bold text-center">Sign up</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= puts f %>
      <div class="mt-4">
        <div class="field">
          <label class="block" for="email">Email<label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email",
          class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
        </div>
        <div class="field">
          <label class="block" for="username">Name<label>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder:"Name",
          class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
        </div>
        <div class="field">         
          <label class="block">Password<label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", 
          class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
        </div>
        <div class="field">
          <label class="block">Password confirmation<label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password", 
           class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
        </div>
        <div class="flex items-baseline justify-between">
          <button class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Sign up</button>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
